<%= render 'layouts/guest_menu' %>
<div class="container">
  <div class="title">My Bookings</div>
  <% @bookings.each do |booking| %>
    <div class="element-container">
      <p>Title: <%=  link_to booking.tenement.title, booking.tenement %></p>
      <p>Dates: <%= "#{booking.arrive} - #{booking.departure}" %></p>
      <p><%= link_to 'Destroy', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?'} %></p>
    </div>
  <% end %>
</div>